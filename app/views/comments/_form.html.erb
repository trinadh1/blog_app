<% if user_signed_in? %>
<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
	<div class= "row">
		<div class= "col-md-2">
			<%= f.label :name %><br>
			<%= f.text_field :name, class: "form-control" %>
		</p>
		</div>
		</div>
		<p>
			<div class= "row">
				<div class= "col-md-6">
					<%= f.label :body %><br>
					<%= f.text_area :body, class: 'form-control' %>
				</p>
				<br>
				<p>
					<%= f.submit "Create a Comment", class:"btn btn-primary" %> 
				</p>
				<% end %>
				<% end %>
			</div>
		</div>
		
		
		
		


