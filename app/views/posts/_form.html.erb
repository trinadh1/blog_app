<%= form_for @post, html: { multipart: true } do |f| %>
    <p>
	<%= f.label :title %><br>		
	<%= f.text_field :title, class: 'form-control' %>
	</p>

	<p>
	<%= f.label :body %><br>
	<%= f.text_area :body, class: 'form-control' %>
	</p>

	<p>
	<%= f.label :image %><br>
	<%= f.file_field :image %>
	</p>

	<p>
	 <%= f.submit "submit", class: "btn btn-primary" %>
	 </p>
	<% end %>
	

